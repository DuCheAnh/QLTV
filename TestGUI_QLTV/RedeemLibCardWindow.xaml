<Window x:Class="TestGUI_QLTV.RedeemLibCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:TestGUI_QLTV"
        mc:Ignorable="d"
        Title="RedeemLibCardWindow" Height="50" Width="250"
        ResizeMode="NoResize"
        WindowStyle="None"
        BorderThickness="1"
        FontFamily="Comic Sans MS"
        FontSize="15"
        Closing="Window_Closing"
        WindowStartupLocation="CenterOwner" 
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="LibCardTextBox" Grid.Column="0" materialDesign:HintAssist.Hint="Libcard ID" VerticalAlignment="Center" Width="160" BorderThickness="0.5"/>
        <Button Grid.Column="1" Content="OK" VerticalAlignment="Center" Width="50" Click="Button_Click"/>
    </Grid>
</Window>
