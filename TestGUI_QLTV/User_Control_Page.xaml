<UserControl x:Class="GUI_QuanLy.User_Control_Page"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI_QuanLy"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Canvas Name ="Profile_picture" Grid.Column="0"
                Background="Black"
                Width="100" Height="100"
                VerticalAlignment="Top"
                Margin="40,40,0,0" >
        </Canvas>
        <StackPanel Margin="0,0 ,0,0" Grid.Column="1" >
            <StackPanel.Resources>
                <local:BooltoGenderConverter x:Key="BooltoGenderConverter"></local:BooltoGenderConverter>
                <Style TargetType="{x:Type FrameworkElement}">
                    <!-- Shared Setters -->
                    <Setter Property="Margin" Value="0,25,0,0" ></Setter>
                </Style>

                <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource {x:Type FrameworkElement}}" />
                <Style TargetType="{x:Type Label}" BasedOn="{StaticResource {x:Type FrameworkElement}}" />
                <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type FrameworkElement}}" />
            </StackPanel.Resources>
            <Label Name="UserAccount_label"
                   Content="{Binding Path=account}"
                   FontSize="20"
                   Margin="0 ,100 ,0,0">
            </Label>
            <Label Name="UserName_label"
                   Content="{Binding Path=name}"
                   FontSize="20">
            </Label>
            <PasswordBox Name="UserPassword_PasswordBox"
                         DataContext="{Binding Path=password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="20">
            </PasswordBox>
            <Label Name="UserGender_Label"
                   Content="{Binding Path=gender, Converter={StaticResource BooltoGenderConverter}}"
                   FontSize="20">
            </Label>
            <Label Name="UserDOB_label"
                   Content="{Binding Path=DOB}"
                   FontSize="20">
            </Label>
            <TextBox Name="UserMail_label"
                   Text="{Binding Path=email, Mode=TwoWay , UpdateSourceTrigger=PropertyChanged}"
                   FontSize="20">
            </TextBox>

        </StackPanel>
        <Button Margin="30,200,30,210" Height="Auto" Click="Borrowed_Book">
            <TextBlock TextAlignment="Center" FontSize="20" FontWeight="Bold" FontFamily="Comic Sans MS">
                BORROWED BOOK
            </TextBlock>
        </Button>
    </Grid>
</UserControl>
