<Window x:Class="GUI_QuanLy.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_QuanLy"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid Name ="main_window">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid Name="User_Info_Datagrid" CellEditEnding="User_Info_Datagrid_CellEditEnding"></DataGrid>
        <Button Name="User_Get_Info_button" Content="Get Info" Grid.Column="1" Grid.Row="1" Margin="0,0,0,0" Width="175" Height="75" Click="User_Get_Info_button_Click"/>
        <Button Name="User_Update_Info_button" Content="Update_Info" Grid.Column="0" Grid.Row="1" Margin="0,0,0,0" Width="175" Height="75" Click="User_Update_Info_button_Click" />
    </Grid>
</Window>
